{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "webpack.*.ts"
  ]
}
